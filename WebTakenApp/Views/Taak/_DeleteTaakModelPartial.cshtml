@model TaakVM

<!-- Modal -->
<div class="modal fade" id="taakToevoegen" tabindex="-1" aria-labelledby="taakToevoegenLabel" aria-hidden="true">
    <div class=" modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="taakToevoegenLabel">Verwijder Taak</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="Delete">
                    <h5>Wil je zeker deze taak verwijderen?</h5>
                    <input type="hidden" asp-for="@Model.Id" />
                    <dl class="row">

                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Naam)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Naam)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Beschrijving)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Beschrijving)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Deadline)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Deadline)
                    </dl>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" aria-label="Close">Annuleren</button>
                <button type="button" class="btn btn-primary" data-save="modal">Taak Verwijderen</button>
            </div>
        </div>
    </div>
</div>

